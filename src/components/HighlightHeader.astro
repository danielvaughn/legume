---
interface Props {
  job: Job;
  highlight: Highlight;
}

const { job, highlight } = Astro.props;
---

<header>
  <h2 class="font-bold uppercase tracking-wide border-black border-b-2 pb-1">
    Achievement
  </h2>

  <h3 class="font-bold mt-2">{highlight.title}</h3>

  <span class="block italic">
    as {job.role} at {job.company_name}
  </span>
</header>
